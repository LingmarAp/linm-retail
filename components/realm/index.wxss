.container {
    box-sizing: border-box;
    padding: 30rpx;
    background-color: #fff;
}

.sku-preview {
    display: flex;
    flex-direction: row;
}

.sku-img {
    width: 160rpx;
    height: 160rpx;
}

.sku-description {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.discount-price {
    margin-left: 20rpx;
}

.price-row {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.sku-pending {
    font-size: 20rpx;
}

.hr {
    width: 690rpx;
    height: 2rpx;
    background-color: #e9e9e9;
    margin-top: 30rpx ;
}