<view class="container">
    <view class="sku-preview">
        <image class="sku-img"></image>
        <view class="sku-description">
            <text class="title">SKU-TITLE</text>
            <view class="price-row">
                <l-price
                        color="#157658"
                        value-size="28"
                        unit-size="20"
                        autofix=""
                        value="699"></l-price>
                <l-price
                        l-class="discount-price"
                        deleted
                        color="#999"
                        size="26"
                        value="999"></l-price>
            </view>
            <view class="sku-pending">
                <text>请选择:</text>
            </view>
        </view>
    </view>

    <view class="hr"></view>

    <view>
        <block wx:for="{{fences}}" wx:key="index">
            <m-fence row="{{index}}" bindcellevent="onCellTap" fence="{{item}}"></m-fence>
        </block>
    </view>
    <view>
        <text></text>
        <l-counter count="1"
                   min="1"
                   max="10"></l-counter>
    </view>
    <view>
        <button>加入购物车</button>
        <button>立即购买</button>
    </view>
</view>
