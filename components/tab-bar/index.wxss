.container {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    background-color: #fff;
}

.icons {
    box-sizing: border-box;
    padding-left: 16rpx;
    padding-right: 22rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    width: 230rpx;
    height: 100%;
    color: #999;
}

.icons > view {
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.icons text {
    font-size: 20rpx;
}

.icons l-icon {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.btn-font {
    color: #fff;
    font-size: 32rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.buy {
    background-color: #157658;
    width: 260rpx;
    height: 100%;
}

.cart {
    background-color: #333;
    width: 260rpx;
    height: 100%;
}